{
	"modules": {
		"*": [
			"./screen",
			"$(MODULES)/base/time/*",
			"$(MODULES)/base/time/$(PLATFORM)/*",
			"$(MODULES)/base/timer/*",
			"$(MODULES)/base/timer/$(PLATFORM)/*"
		]
	},
	"preload": [
		"time",
		"timer"
	],
	"platforms": {
		"lin": {
		},
		"lin/*": {
			"include": "./targets/$(SUBPLATFORM)/manifest.json"
		},
		"mac": {
			"modules": {
				"*": [
					"$(MODULES)/base/timer/modTimer"
				]
			}
		},
		"mac/*": {
			"include": "./targets/$(SUBPLATFORM)/manifest.json",
			"modules": {
				"*": [
					"$(MODULES)/base/timer/modTimer"
				]
			}
		},
		"win": {
			"modules": {
				"*": [
					"$(MODULES)/base/timer/modTimer"
				]
			}
		},
		"win/*": {
			"include": "./targets/$(SUBPLATFORM)/manifest.json",
			"modules": {
				"*": [
					"$(MODULES)/base/timer/modTimer"
				]
			}
		},
		"wasm": {
		},
		"wasm/*": {
			"include": "./targets/$(SUBPLATFORM)/manifest.json"
		}
	}
}
