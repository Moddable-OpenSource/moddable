{
	"build": {
		"USE_USB": "1",
		"UF2_VOLUME_NAME": "MODDABLEnRF"
	},
	"modules": {
		"setup/target": "./setup-target"
	},
	"preload": [
		"setup/target"
	],
	"config": {
		"led1_pin": 13,
		"led2_pin": 14,
		"led3_pin": 15,
		"led4_pin": 16,

		"button1_pin": 11,
		"button2_pin": 12,
		"button3_pin": 24,
		"button4_pin": 25
	},
	"defines": {
		"xdebugger": {
			"tx": "NRF_GPIO_PIN_MAP(0,30)",
			"rx": "NRF_GPIO_PIN_MAP(0,31)",
			"baud": "NRF_UART_BAUDRATE_115200"
		},
		"spi": {
			"interface": "1",
			"hz": "8000000",
			"mosi_pin": "NRF_GPIO_PIN_MAP(0,2)",
			"miso_pin": "NRF_GPIO_PIN_MAP(1,15)",
			"sck_pin": "NRF_GPIO_PIN_MAP(1,14)"
		},
		"i2c": {
			"interface": "0",
			"scl_pin": "NRF_GPIO_PIN_MAP(0,27)",
			"sda_pin": "NRF_GPIO_PIN_MAP(0,26)"
		}
	}
}
