{
    "build": {
        "MAKE_FRAGMENT": "$(MODDABLE)/tools/mcconfig/make.nrf52.ses.mk"
    },
    "recipes": {
        "separate-asm": [
            "commodetto*",
            "cfe*",
            "piu*",
            "Resource*",
            "mod*",
            "timer*",
            "i2c*",
            "digital*",
            "pulsecount*",
            "analog*",
            "btutils*"
        ]
    },
	"include": [
		"$(MODULES)/drivers/ls013b4dn04/manifest.json"
	],
	"config": {
		"screen": "ls013b4dn04",
		"touch": "",
		"format": "Gray256",

		"autobacklight": 1,
		"lcd_power_pin": 23,

		"led1_pin": 7,

		"button1_pin": 13,

		"click_wheel_a": 6,
		"click_wheel_b": 8,
		"click_wheel_sw": 11,
	},
    "modules": {
        "*": [
            "$(MODULES)/pins/digital/*"
        ],
		"setup/target": "./setup-target",
        "pins/smbus": "$(MODULES)/pins/smbus/smbus"
    },
	"defines": {
		"debugger": {
			"tx_pin": "NRF_GPIO_PIN_MAP(0,30)",
			"rx_pin": "NRF_GPIO_PIN_MAP(0,31)",
			"baudrate": "NRF_UART_BAUDRATE_115200"
		},
		"spi": {
			"interface": "1",
			"hz": "2000000",
			"mosi_pin": "NRF_GPIO_PIN_MAP(0,2)",
			"xmosi_pin": "NRF_GPIO_PIN_MAP(0,29)",
			"miso_pin": "NRF_GPIO_PIN_MAP(1,15)",
			"sck_pin": "NRF_GPIO_PIN_MAP(1,14)"
		},
		"i2c": {
			"interface": "0",
			"sda_pin": "NRF_GPIO_PIN_MAP(0,26)",
			"scl_pin": "NRF_GPIO_PIN_MAP(0,27)"
		},
		"ls013b4dn04": {
			"width": 128,
			"height": 128,
			"spi_port": 1,
			"cs_pin": "NRF_GPIO_PIN_MAP(1,13)",
			"disp_pin": "NRF_GPIO_PIN_MAP(1,1)"
		},
		"click_wheel": {
			"enc_a": "NRF_GPIO_PIN_MAP(0,6)",
			"enc_b": "NRF_GPIO_PIN_MAP(0,8)",
			"enc_sw": "NRF_GPIO_PIN_MAP(0,11)"
		}
	}
}
