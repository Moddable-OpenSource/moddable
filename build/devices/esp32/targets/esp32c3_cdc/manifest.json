{
	"build":{
		"ESP32_SUBCLASS": "esp32c3",
        "USE_USB": "2",
        "SDKCONFIGPATH": "./sdkconfig",
        "PROGRAMMING_MODE_MESSAGE": "INSTRUCTIONS: Hold the BOOT button and press then release the RST button.",
        "BEFORE_DEBUGGING_MESSAGE": "Press and release the RST button."
	},
	"include": [
		"$(MODULES)/drivers/button/manifest.json",
		"$(MODULES)/drivers/neopixel/manifest.json"
	],
	"modules": {
		"setup/target": "./setup-target"
	},
	"preload": [
		"setup/target",
		"neopixel"
	],
	"config": {
		"screen": "",
		"led": {
			"pin": 8,
			"rainbow": true,
			"brightness": 32
		}
	},
	"defines": {
		"i2c": {
			"sda_pin": 2,
			"scl_pin": 3,
			"port": "I2C_NUM_0"
		},
		"spi": {
			"miso_pin":6,
			"mosi_pin":7,
			"sck_pin": 8
		}
	}
}
