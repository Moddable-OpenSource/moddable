#!/bin/bash 

MISSING=0

while [[ "$#" -gt 1 ]]
do
	case "$1" in
		-x|--missing)
			MISSING=1
			shift;
			;;
		*)
		;;
	esac
done

name=$1
volumefile=$2

if [[ -f "$volumefile" ]]
then
	rm "$volumefile" 2> /dev/null
fi

volume=$( df -P 2>/dev/null | grep "$name" | awk '{print($6)}' )
set -o pipefail

if [[ $MISSING == 0 ]]
then
	if [[ ! -d $name ]]
	then
		echo "Waiting for $name."
		echo -n "Hold the BOOTSEL button and power-cycle the device"
		while [ -z "$volume"  ]; do
		        echo -n "."
		        sleep 1
		        volume=$( df -P 2>/dev/null | grep "$name" | awk '{print($6)}' )
		done
	fi
else
	echo -n "Waiting for copy to complete."
	while [ ! -z "$volume"  ]; do
	        echo -n "."
	        sleep 1
	        volume=$( df -P 2>/dev/null | grep "$name" | awk '{print($6)}' )
	done
fi
echo
	
if [[ -f "$volumefile" ]]
then
	echo $volume >> "$volumefile"
fi

