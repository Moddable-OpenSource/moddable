{
	"platforms": {
		"esp": {
			"modules": {
				"*": [
					"$(MODULES)/network/socket/*",
					"$(MODULES)/network/socket/lwip/*",
					"$(MODULES)/network/net/*",
					"$(MODULES)/network/net/esp/*",
					"$(MODULES)/network/sntp/*",
					"$(MODULES)/network/wifi/*",
					"$(MODULES)/network/wifi/esp/*",
				],
				"setup/network": "$(BUILD)/devices/esp/setup/network",
			},
			"preload": [
				"socket",
				"setup/network",
				"sntp",
				"wifi",
				"net"
			]
		},
		"esp32": {
