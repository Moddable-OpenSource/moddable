{
	"build": {
		"BUILD": "$(MODDABLE)/build",
		"MODULES": "$(MODDABLE)/modules",
		"COMMODETTO": "$(MODULES)/commodetto",
		"PIU": "$(MODULES)/piu",
	},
	"creation": {
		"static": 32768,
		"chunk": {
			"initial": 1536,
			"incremental": 512,
		},
		"heap": {
			"initial": 512,
			"incremental": 64,
		},
		"stack": 256,
		"keys": {
			"available": 32,
			"name": 53,
			"symbol": 3,
		},
		"main": "main",
	},
	"modules": {
		"*": [
			"$(MODULES)/files/resource/*",
			"$(MODULES)/base/instrumentation/*",
		],
	},
	"preload": [
		"Resource",
		"instrumentation",
	],
	"strip": "*",
	"platforms": {
		"esp": {
			"modules": {
				"*": [
					"$(MODULES)/base/debug/*",
					"$(MODULES)/base/time/*",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/mc/*",
				]
			},
			"preload": [
				"debug",
				"time",
				"timer",
			],
			"recipes": {
				"strings-in-flash": [
					"commodetto*",
					"piu*",
					"Resource*",
					"mod*",
				],
			},
			"defines": {
				"i2c": {
					"sda_pin": 5,
					"scl_pin": 4
				}
			}
		},
		"esp32": {
			"modules": {
				"*": [
					"$(MODULES)/base/debug/*",
					"$(MODULES)/base/time/*",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/mc/*",
				]
			},
			"preload": [
				"debug",
				"time",
			],
			"defines": {
				"i2c": {
					"sda_pin": 21,
					"scl_pin": 22
				}
			}
		},
		"mac": {
			"modules": {
				"*": [
					"$(BUILD)/simulator/screen",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/mac/*",
				],
			},
		},
	},
}
