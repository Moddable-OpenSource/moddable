{
	"build": {
		"BUILD": "$(MODDABLE)/build",
		"MODULES": "$(MODDABLE)/modules",
		"COMMODETTO": "$(MODULES)/commodetto",
		"PIU": "$(MODULES)/piu",
	},
	"creation": {
		"static": 32768,
		"chunk": {
			"initial": 1536,
			"incremental": 512,
		},
		"heap": {
			"initial": 512,
			"incremental": 64,
		},
		"stack": 256,
		"keys": {
			"available": 32,
			"name": 53,
			"symbol": 3,
		},
		"main": "main",
	},
	"modules": {
		"*": [
			"$(MODULES)/files/resource/*",
			"$(MODULES)/base/instrumentation/*",
		],
	},
	"preload": [
		"Resource",
		"instrumentation",
	],
	"strip": "*",
	"platforms": {
		"esp": {
			"modules": {
				"*": [
					"$(MODULES)/base/time/*",
					"$(MODULES)/base/time/esp/*",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/mc/*",
				]
			},
			"preload": [
				"time",
				"timer",
			],
			"recipes": {
				"strings-in-flash": [
					"commodetto*",
					"piu*",
					"Resource*",
					"mod*",
					"i2c*",
					"digital*",
				],
				"c++11": [
					"*.cc.o",
					"*.cpp.o",
				],
			},
			"defines": {
				"i2c": {
					"sda_pin": 5,
					"scl_pin": 4
				}
			}
		},
		"esp32": {
			"modules": {
				"*": [
					"$(MODULES)/base/time/*",
					"$(MODULES)/base/time/esp/*",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/mc/*",
				]
			},
			"preload": [
				"time",
				"timer",
			],
			"defines": {
				"i2c": {
					"sda_pin": 21,
					"scl_pin": 22
				}
			}
		},
		"gecko/giant": {
			"modules": {
				"*": [
					"$(MODULES)/base/time/*",
					"$(MODULES)/base/time/esp/*",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/mc/*",
				]
			},
			"preload": [
				"time",
				"timer",
			],
			"defines": {
				"giant": "true",
				"sleep": {
					"idleLevel" : 1,
					"retention": { "memory": false, "gpio": true },
					"wakeup": { "pin": "2", "port": "gpioPortF", "register": "GPIO_EM4WUEN_EM4WUEN_F2" },
				},
				"debugger": {
					"tx": { "pin": "9", "port": "gpioPortB" },
					"rx": { "pin": "10", "port": "gpioPortB" },
					"port": "UART1",
					"clock": "cmuClock_UART1",
					"location": "2",
				},
				"spi": {
					"mosi": { "pin": "0", "port": "gpioPortD" },
					"miso": { "pin": "1", "port": "gpioPortD" },
					"sck": { "pin": "2", "port": "gpioPortD" },
					"port": "1",
					"location": "1",
				},
				"i2c": {
					"sda_pin": 5,
					"scl_pin": 4
				}
			}
		},
		"gecko/mighty": {
			"modules": {
				"*": [
					"$(MODULES)/base/time/*",
					"$(MODULES)/base/time/esp/*",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/mc/*",
				]
			},
			"preload": [
				"time",
				"timer",
			],
			"defines": {
				"mighty": true,
				"sleep": {
					"idleLevel" : 3,
					"retention": { "memory": true, "gpio": false },
					"wakeup": { "pin": "7", "port": "gpioPortF", "register": "GPIO_EXTILEVEL_EM4WU1" },
				},
				"debugger": {
					"tx": { "pin": "11", "port": "gpioPortD" },
					"rx": { "pin": "12", "port": "gpioPortD" },
					"port": "USART1",
					"clock": "cmuClock_USART1",
					"location": "19",
				},
				"spi": {
					"mosi": { "pin": "6", "port": "gpioPortA" },
					"miso": { "pin": "7", "port": "gpioPortA" },
					"sck": { "pin": "8", "port": "gpioPortA" },
					"port": "2",
					"location": "1",
				},
				"i2c": {
					"port": "0",
					"sda": { "pin": 11, "port": "gpioPortC", "location" : 16 },
					"scl": { "pin": 10, "port": "gpioPortC", "location" : 14 },
				}
			}
		},
		"lin": {
			"modules": {
				"*": [
					"$(BUILD)/simulator/screen",
					"$(MODULES)/base/timer/timer",
					"$(MODULES)/base/timer/lin/*",
				]
			}
		},
		"mac": {
			"modules": {
				"*": [
					"$(BUILD)/simulator/screen",
					"$(MODULES)/base/time/*",
					"$(MODULES)/base/time/mac/*",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/mac/*",
				],
			},
		},
		"win": {
			"modules": {
				"*": [
					"$(BUILD)/simulator/screen",
					"$(MODULES)/base/timer/*",
					"$(MODULES)/base/timer/win/*"
				]
			}
		}
	},
}
