{
	"include": [
		"$(MODDABLE)/examples/manifest_base.json",
		"$(MODDABLE)/examples/manifest_piu.json",
		"$(MODDABLE)/modules/network/ble/manifest_server.json",
	],
	"modules": {
		"*": [
			"./main",
			"./htmservice"
		]
	},
	"preload": [
		"htmservice",
	],
	"ble":{
		"*": [
			"./bleservices/*",
		],
	},
	"resources": {
		"*-mask": [
			"./assets/dot",
			"./assets/sm-bt-logo",
			"./assets/ticks-arc",
			"./fonts/OpenSans-Regular-72",
			"./fonts/OpenSans-Regular-18",
		],
		"*-color": [
			"./assets/color-arc",
		],
	},
	"platforms": {
		"gecko/blue": {
			"error": "application not supported on this platform"
		}
	}
}
