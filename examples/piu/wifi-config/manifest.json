{
	"include": [
		"$(MODDABLE)/examples/manifest_base.json",
		"$(MODDABLE)/examples/manifest_net.json",
		"$(MODDABLE)/examples/manifest_piu.json",
		"$(MODULES)/input/keyboard/manifest.json"
	],
	"creation":{
		"stack":350,
	},
	"modules": {
		"~": [
			"$(PIU)/MC/piuCombTransition",
			"$(PIU)/MC/piuWipeTransition",
			"$(BUILD)/devices/esp/setup/network"
		],
		"*": [
			"./main",
			"./wifi-screens",
			"./assets",
			"./scroller",
		]
	},
	"preload": [
		"wifi-screens",
		"assets",
		"scroller",
	],
	"platforms": {
		"mac": {
			"modules": {
				"~": [
					"$(MODULES)/network/wifi/*",
				],
				"wifi": "./simulator/wifisim",
			},
		}
	},
	"resources":{
		"*-alpha": [
			"./fonts/OpenSans-Regular-20",
			"./fonts/OpenSans-Semibold-18",
			"./fonts/OpenSans-Semibold-16",
			"./assets/header-arrow",
			"./assets/wifi-strip",
			"./assets/down-arrow-mask",
			"./assets/up-arrow-mask",
			"./assets/page-1",
		],
	},
}
