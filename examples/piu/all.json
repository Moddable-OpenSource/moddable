{
	"include": [
		"$(MODDABLE)/modules/drivers/ili9341/manifest.json",
		"$(MODDABLE)/modules/drivers/ft6206/manifest.json",
		"$(MODDABLE)/modules/drivers/xpt2046/manifest.json",
	],

	"build": {
		"BUILD": "$(MODDABLE)/build",
		"MODULES": "$(MODDABLE)/modules",
		"COMMODETTO": "$(MODULES)/commodetto",
		"PIU": "$(MODULES)/piu",
	},
	"creation": {
		"static": 32768,
		"chunk": {
			"initial":1536,
			"incremental":1024,
		},
		"heap": {
			"initial":512,
			"incremental":64,
		},
		"stack":256,
		"keys": {
			"available":32,
			"name":53,
			"symbol":3,
		},
		"main":"main",
	},
	"data": {
		"*": [
		],
	},
	"config": {
		"screen": "ili9341",
		"touch": "xpt2046",
		"sntp": "pool.ntp.org"
	},
	"defines": {
		"ls013b4dn04": {
			"width": 400,
			"height": 240,
		},
		"lpm013m126a": {
		}
	},
	"modules": {
		"~": [
		],
		"commodetto/Bitmap": "$(COMMODETTO)/commodettoBitmap",
		"commodetto/Poco": "$(COMMODETTO)/commodettoPoco",
		"commodetto/*": "$(COMMODETTO)/commodettoPocoBlit",
		"commodetto/ParseBMP": "$(COMMODETTO)/commodettoParseBMP",
		"commodetto/ParseRLE": "$(COMMODETTO)/commodettoParseRLE",
		"piu/*": [
			"$(PIU)/All/piu*",
			"$(PIU)/MC/piu*",
		],
		"*": [
			"$(MODULES)/files/resource/*",
			"$(MODULES)/base/instrumentation/*",
			"$(MODULES)/base/timer/*",
		],
	},
	"preload": [
		"commodetto/*",
		"piu/*",
		"Resource",
		"instrumentation",
		"timer"
	],
	"strip": "*",
	"platforms":{
		"linux": {
			"modules": {
				"*": [
					"$(MODULES)/drivers/devfb/*",
					"$(BUILD)/devices/linux/devfb/screen",
				],
			},
			"preload": [
				"devfb",
			],
		},
		"synergy": {
			"modules": {
				"*": [
					"$(MODULES)/base/time/*",
					"$(MODULES)/drivers/synfb/*"
				],
				"setup": "$(BUILD)/devices/synergy/setup/setup-piu",
			},
			"preload": [
				"time",
				"synfb",
			],
		},
		"gecko_giant": {
			"defines": {
				"spi": {
					"mosi": { "pin": 0, "port": "gpioPortD", },
					"miso": { "pin": 1, "port": "gpioPortD", },
					"sck": { "pin": 2, "port": "gpioPortD", },
					"cs": { "pin": 3, "port": "gpioPortD", },
					"port": "USART1",
					"clock": "cmuClock_USART1",
					"location": "USART_ROUTE_LOCATION_LOC1",
				},
				"destm32s": {
					"hz": 5000000,
					"cs": { "pin": 3, "port": "gpioPortD", },
					"dc": { "pin": 3, "port": "gpioPortC", },
					"rst": { "pin": 0, "port": "gpioPortC", },
					"busy": { "pin": 4, "port": "gpioPortC", },
				},
			},
			"modules": {
				"*": [
					"$(MODULES)/base/timer/mc/*",
					"$(MODULES)/base/time/*",
					"$(BUILD)/devices/gecko/pins/*",
					"$(BUILD)/devices/gecko/spi/*",
				],
			},
			"preload": [
				"time",
			],
		},
		"esp32": {
			"modules": {
				"*": [
					"$(MODULES)/base/timer/mc/*",
					"$(MODULES)/base/time/*",
					"$(BUILD)/devices/esp32/spi/*",
					"$(BUILD)/devices/esp32/pins/*",
					"$(MODULES)/network/wifi/*",
					"$(MODULES)/network/wifi/esp32/*",
					"$(MODULES)/network/net/*",
					"$(MODULES)/network/sntp/*",
					"$(MODULES)/network/socket/*",
					"$(MODULES)/network/socket/lwip/*",
				],
				"setup": "$(BUILD)/devices/esp32/setup/setup-piu",
			},
			"preload": [
				"pins",
				"wifi",
				"net",
				"sntp",
				"socket",
				"setup",
			],
		},
		"esp": {
			"modules": {
				"*": [
					"$(MODULES)/drivers/ssd1306/*",
					"$(MODULES)/drivers/ssd1351/*",
					"$(MODULES)/drivers/ls013b4dn04/*",
					"$(MODULES)/drivers/lpm013m126a/*",
					"$(MODULES)/base/time/*",
					"$(MODULES)/base/timer/mc/*",
					"$(MODULES)/pins/i2c/*",
					"$(MODULES)/pins/i2c/esp/*",
					"$(MODULES)/pins/spi/esp/*",
					"$(MODULES)/network/wifi/*",
					"$(MODULES)/network/wifi/esp/*",
					"$(MODULES)/network/net/*",
					"$(MODULES)/network/sntp/*",
					"$(MODULES)/network/socket/*",
					"$(MODULES)/network/socket/lwip/*",
				],
				"pins/digital": "$(MODULES)/pins/digital/digital",
				"setup": "$(BUILD)/devices/esp/setup/setup-piu",
			},
			"preload": [
				"ssd1306",
				"ssd1351",
				"ls013b4dn04",
				"lpm013m126a",
				"time",
				"pins/*",
				"wifi",
				"net",
				"sntp",
				"socket",
				"setup",
			],
			"defines": {
				"ssd1351": {
					"width": 128,
					"height": 128,
					"hz": 10000000,
					"spi_port": "#HSPI",
					"cs_pin": 4,
					"dc_pin": 2,
					"rst_pin": 0,
				},
				"ls013b4dn04": {
					"cs": {
						"pin": 4
					},
					"spi": {
						"port": "#HSPI"
					}
				},
				"lpm013m126a": {
					"cs": {
						"pin": 4
					},
					"spi": {
						"port": "#HSPI"
					}
				}
			},
			"recipes": {
				"strings-in-flash": [
					"commodetto*",
					"piu*",
					"Resource*",
					"mod*",
				],
			}
		},
		"zephyr": {
			"modules": {
				"*": [
					"$(MODULES)/base/timer/mc/*",
				],
			},
			"preload": [
			],
			"defines": {
				"ili9341": {
					"dc": { "port": "#GPIO_2", "pin": 12 },
					"rst": { "port": "#GPIO_2", "pin": 4 },
					"spi": { "port": "#SPI_0" },
				},
			},
		},
		"zephyr/rgb565le": {
			"modules": {
				"screen": "$(BUILD)/devices/linux/ili9341/rgb565le/screen",
			},
		},
		"lin": {
			"modules": {
				"~": [
					"$(MODULES)/base/timer/*",
				],
				"*": ["$(BUILD)/simulator/screen"],
			},
		},
		"mac": {
			"modules": {
				"*": [
					"$(BUILD)/simulator/screen",
					"$(MODULES)/base/timer/mac/*",
				],
			},
		},
		"win": {
			"modules": {
				"~": [
					"$(MODULES)/base/timer/*",
				],
				"*": [
					"$(BUILD)/simulator/screen"
				],
			},
		},
	},
}
