{
	"include": [
		"$(MODDABLE)/examples/manifest_base.json",
		"$(MODDABLE)/examples/manifest_piu.json",
		"$(MODDABLE)/modules/pins/i2s/manifest.json"
	],
	"config": {
		"rotation": 90,
		"autorotate": false
	},
	"modules": {
		"*": [
			"./main"
		],
		"piu/Sound": [
			"$(MODULES)/piu/MC/piuSound"
		]
	},
	"resources": {
		"*": "$(MODDABLE)/examples/assets/sounds/bflatmajor",
		"*-mask": [
			"./volume-down",
			"./volume-up",
			"./play"
		]
	},
	"platforms": {
		"esp32/m5stack": {},
		"esp32/m5stack_fire": {},
		"esp32/m5stack_core2": {},
		"esp32/m5stack_cores3": {},
		"esp32/kaluga": {},
		"esp32/moddable_two": {
			"defines": {
				"audioOut": {
					"bitsPerSample": 16,
					"numChannels": 1,
					"sampleRate": 32000,
					"format": "ima",
					"streams": 1,
					"queueLength": 4,
					"i2s": {
						"dac": 1
					}
				}
			}
		},
		"mac": {},
		"win": {},
		"...": {
			"error": "Platform not supported"
		}
	}
}

