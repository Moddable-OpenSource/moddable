{
	"include": [
		"$(MODDABLE)/examples/manifest_base.json",
		"$(MODDABLE)/examples/manifest_piu.json"
	],
	"modules": {
		"*": [
			"./main"
		]
	},
	"preload": [
		"main"
	],
	"platforms": {
		"mac": {
			"resources":{
				"*-color": "./assets/320x240/*"
			}
		},
		"win": {
			"resources":{
				"*-color": "./assets/320x240/*"
			}
		},
		"lin": {
			"resources":{
				"*-color": "./assets/320x240/*"
			}
		},
		"esp32/moddable_two": {
			"config": {
				"rotation": 90
			},
			"resources":{
				"*-color": "./assets/320x240/*"
			}
		},
		"esp/moddable_three": {
			"defines": {
				"destm32s": {
					"full": true,
					"dither": true
				}
			},
			"config": {
				"rotation": 90
			},
			"resources":{
				"*-color": "./assets/255x122/*"
			}
		},
		"mac/m5paper": {
			"resources":{
				"*-color": "./assets/960x540/*"
			}
		},
		"win/m5paper": {
			"resources":{
				"*-color": "./assets/960x540/*"
			}
		},
		"lin/m5paper": {
			"resources":{
				"*-color": "./assets/960x540/*"
			}
		},
		"esp32/m5core_ink": {
			"resources":{
				"*-color": "./assets/200x200/*"
			}
		},
		"...": {
			"error": "Platform not supported"
		}
	}
}
