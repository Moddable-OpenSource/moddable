{
	"modules": {
		"*": [
			"$(MODULES)/network/ble/*",
			"$(MODULES)/data/hex/*"
		],
	},
	"preload": [
		"ble",
		"btutils",
		"connection",
		"gap",
		"gatt",
		"hex"
	],
	"defines": {
		"ble": {
			"enabled": true
		}
	},
	"platforms": {
		"esp32": {
			"modules": {
				"*": "$(MODULES)/network/ble/esp32/*",
			},
		},
		"gecko/blue": {
			"modules": {
				"*": "$(MODULES)/network/ble/gecko/*",
			},
		},
		"...": {
			"error": "ble unsupported"
		}
	}
}
