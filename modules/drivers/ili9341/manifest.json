{
	"include": [
		"$(MODULES)/pins/digital/manifest.json",
		"$(MODULES)/pins/spi/manifest.json",
	],
	"defines": {
		"ili9341": {
			"width": 240,
			"height": 320,
			"hz": 40000000,
			"flipX": false,
			"flipY": false,
		}
	},
	"modules": {
		"*": "$(MODULES)/drivers/ili9341/*",
		"commodetto/Bitmap": "$(COMMODETTO)/commodettoBitmap",
	},
	"preload": [
		"ili9341",
		"commodetto/Bitmap",
	],
	"platforms": {
		"gecko/giant": {
			"defines": {
				"ili9341": {
					"hz": 40000000,
					"cs": { "pin": 3, "port": "gpioPortD", },
					"dc": { "pin": 4, "port": "gpioPortC", },
					"rst": { "pin": 3, "port": "gpioPortC", },
				}
			},
		},
		"gecko/mighty": {
			"defines": {
				"ili9341": {
					"hz": 40000000,
					"cs": { "pin": 9, "port": "gpioPortA", },
					"dc": { "pin": 6, "port": "gpioPortB", },
				}
			},
		},
		"gecko/thunderboard2": {
			"defines": {
				"ili9341": {
					"hz": 40000000,
					"cs": { "pin": 5, "port": "gpioPortA", },
					"dc": { "pin": 6, "port": "gpioPortF", },
				}
			},
		},
	},
	"NOT_PLATFORMS": {
		"esp8266_x": {
			"defines": {
				"ili9341": {
					"old_cs_pin": 4,
					"cs_pin": 15,
					"dc_pin": 2,
					"spi_port": "#HSPI"
				},
				"ili9341_IPS": {
					"old_cs_pin": 4,
					"MM_cs_pin": 4,
					"MM_dc_pin": 5,
					"X_rst_pin": 4,
					"cs_pin": 15,
					"dc_pin": 2,
					"spi_port": "#HSPI",
					"registers_append": [
						"0x36, 1, 0xF0,",
						"0x21, 0,",
						"0xE0, 14, 0xD0, 0x08, 0x11, 0x08, 0x0C, 0x15, 0x39, 0x33, 0x50, 0x36, 0x13, 0x14, 0x29, 0x2d,",
						"0xE1, 14, 0xD0, 0x08, 0x11, 0x08, 0x06, 0x06, 0x39, 0x44, 0x51, 0x0b, 0x16, 0x14, 0x2f, 0x31,",
					],
				},
            }
		},
		"esp32_x": {
			"defines": {
				"ili9341_zero": {
					"hz": 40000000,
					"cs_pin": 15,
					"dc_pin": 2,
					"spi_port": "HSPI_HOST"
				},
				"ili9341_X": {
					"hz": 40000000,
					"cs_pin": 14,
					"dc_pin": 27,
					"rst_pin": 33,
					"spi_port": "VSPI_HOST",
					"backlight_pin": 32,
					"backlight_on": 1,
					"registers_append": [
						"0x36, 1, 0xA8,",
					],
				},
				"spi_oddwires": {
					"mosi_pin": 23,
					"miso_pin": 19,
					"sck_pin": 18
				},
				"ili9341_oddwires": {
					"hz": 40000000,
					"cs_pin": 5,
					"dc_pin": 27,
					"backlight_pin": 33,
					"backlight_on": 1,
					"spi_port": "VSPI_HOST"
				}
			},
		},
	}
}
