{
	"defines": {
		"ili9341": {
			"width": 240,
			"height": 320,
			"hz": 40000000,
			"flipX": false,
			"flipY": false,
		}
	},
	"preload": [
		"ili9341",
		"commodetto/Bitmap",
	],
	"platforms": {
		"esp": {
			"include": [
				"$(MODULES)/pins/digital/manifest.json",
				"$(MODULES)/pins/spi/manifest.json",
			],
			"modules": {
				"*": "$(MODULES)/drivers/ili9341/*",
				"commodetto/Bitmap": "$(COMMODETTO)/commodettoBitmap",
			},
			"defines": {
				"ili9341": {
					"old_cs_pin": 4,
					"cs_pin": 15,
					"dc_pin": 2,
					"spi_port": "#HSPI"
				}
			}
		},
		"esp32": {
			"include": [
				"$(MODULES)/pins/digital/manifest.json",
				"$(MODULES)/pins/spi/manifest.json",
			],
			"modules": {
				"*": "$(MODULES)/drivers/ili9341/*",
				"commodetto/Bitmap": "$(COMMODETTO)/commodettoBitmap",
			},
			"defines": {
				"ili9341": {
					"hz": 40000000,
					"cs_pin": 15,
					"dc_pin": 2,
					"spi_port": "#HSPI"
				}
			}
		},
		"gecko/giant": {
			"include": [
				"$(MODULES)/pins/digital/manifest.json",
				"$(MODULES)/pins/spi/manifest.json",
			],
			"modules": {
				"*": "$(MODULES)/drivers/ili9341/*",
				"commodetto/Bitmap": "$(COMMODETTO)/commodettoBitmap",
			},
			"defines": {
				"ili9341": {
					"hz": 40000000,
					"cs": { "pin": 3, "port": "gpioPortD", },
					"dc": { "pin": 5, "port": "gpioPortD", },
					"rst": { "pin": 4, "port": "gpioPortD", },
				}
			},
		},
		"gecko/mighty": {
			"include": [
				"$(MODULES)/pins/digital/manifest.json",
				"$(MODULES)/pins/spi/manifest.json",
			],
			"modules": {
				"*": "$(MODULES)/drivers/ili9341/*",
				"commodetto/Bitmap": "$(COMMODETTO)/commodettoBitmap",
			},
			"defines": {
				"ili9341": {
					"hz": 40000000,
					"cs": { "pin": 9, "port": "gpioPortA", },
					"dc": { "pin": 6, "port": "gpioPortB", },
				}
			},
		},
	}
}
