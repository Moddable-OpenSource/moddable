	"platforms": {
		"mac/moddable_four": {
			"modules": {
				"*": [
					"./simulator/uart",
					"./simulator/power"
				]
			},
			"preload": [
				"uart",
				"power"
			]
		},
		"lin/moddable_four": {
			"modules": {
				"*": [
					"./simulator/uart",
					"./simulator/power"
				]
			},
			"preload": [
				"uart",
				"power"
			]
		},
		"win/moddable_four": {
			"modules": {
				"*": [
					"./simulator/uart",
					"./simulator/power"
				]
			},
			"preload": [
				"uart",
				"power"
			]
		},
		"nrf52/moddable_four": {
			"include": [
				"$(MODDABLE)/modules/network/ble/manifest_server.json",
				"$(BUILD)/devices/nrf52/modules/sleep/manifest.json"
			],
			"ble":{
				"*": [
					"./bleservices/*"
				]
			},
			"modules": {
				"*": [
					"./device/uart",
					"./device/power"
				]
			},
			"preload": [
				"uart",
				"power"
			]
		},
		"...": {
			"error": "use -p nrf52/moddable_four or -p sim/moddable_four"
		}
	}
}
