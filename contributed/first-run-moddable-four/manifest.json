{
	"build": {
		"BUILD": "$(MODDABLE)/build",
		"MODULES": "$(MODDABLE)/modules",
		"HEAP_SIZE": "0x31000"
	},
	"defines": {
		"ls013b4dn04": {
			"dither": 1
		}
	},
	"include": [
		"$(MODDABLE)/examples/manifest_base.json",
		"$(MODDABLE)/examples/manifest_piu.json",
		"$(MODULES)/piu/mc/gif/manifest.json",
		"$(MODULES)/piu/mc/qrcode/manifest.json"
	],
	"creation": {
		"stack": 512
	},
	"modules": {
		"*": [
			"./Controller",
			"./Transition",
			"./View",
			"./assets",
			"./main",
			"./model",
			"./views/*"
		]
	},
	"preload": [
		"Controller",
		"Transition",
		"View",
		"About",
		"Asleep",
		"BLEWeb",
		"Dither",
		"Gravity",
		"Home",
		"Menu",
		"SetDate",
		"SetTime",
		"Splash",
		"Wake",
		"assets",
		"model"
	],
	"data":{
		"*": [
			"./assets/gifs/*"
		]
	},
	"resources":{
		"*-alpha-monochrome": [
			"./assets/*"
		],
		"*-mask": [
			{
