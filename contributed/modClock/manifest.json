{
	"build": {
		"SDKCONFIGPATH": "$(MODDABLE)/contributed/modClock/sdkconfig",
		"PARTITIONS_FILE": "$(MODDABLE)/contributed/modClock/sdkconfig/partitions.csv"
	},
	"include": [
		"$(MODDABLE)/examples/manifest_base.json",
		"$(MODDABLE)/examples/manifest_net.json",
		"$(MODULES)/files/preference/manifest.json",
		"$(MODULES)/network/mdns/manifest.json",
		"$(MODULES)/pins/i2c/manifest.json",
		"$(MODULES)/pins/digital/monitor/manifest.json",
		"$(MODULES)/drivers/rtc/manifest.json"
	],
	"creation": {
		"stack": 500,
		"static": 95000
	},
	"modules": {
		"*": [
			"$(MODULES)/drivers/neopixel/*",
			"./main",
			"./buttons",
			"./sevenseg",
			"./styles",
			"$(MODULES)/network/sntp/*",
			"$(MODULES)/network/http/*",
			"./web",
			"./update",
			"./prefs",
			"$(MODDABLE)/examples/network/wifi/wifiscancontinuous/wifiscanner"
		],
		"net":"$(MODULES)/network/net/netmdns",
		"dns/server":"$(MODULES)/network/dns/dnsserver",
		"esp32/ota": "$(BUILD)/devices/esp32/modules/ota/*"
	},
	"preload": [
		"neopixel",
		"buttons",
		"styles",
		"sevenseg",
		"sntp",
		"http",
		"preference",
		"net",
		"web",
		"update",
		"prefs",
		"dns/server",
		"esp32/ota",
		"wifiscanner"
	],
	"resources": {
		"*": [
			"./resources/favicon",
			"./resources/clock"
		]
	},
	"platforms": {
		"esp32": {
			"defines": {
				"i2c": {
					"sda_pin": 21,
					"scl_pin": 22
				},
				"neopixel": {
					"custom_rmt_driver": 1
				}
			},
			"modules": {
				"*": [
					"$(MODULES)/drivers/neopixel/esp32/*"
				]
			}
		},
		"...": {
			"error": "platform unsupported"
		}
	},
